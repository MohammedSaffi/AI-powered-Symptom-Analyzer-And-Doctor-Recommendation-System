<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Patient Records - Healthcare Portal</title>
  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
    }
    
    .glass-effect {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.85);
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
    }
    
    .card {
      transition: all 0.3s ease;
      border: 1px solid rgba(255, 255, 255, 0.6);
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(31, 38, 135, 0.2);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #2563eb, #4f46e5);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
    }
    
    .btn-danger {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      transition: all 0.3s ease;
    }
    
    .btn-danger:hover {
      background: linear-gradient(135deg, #dc2626, #b91c1c);
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.3);
    }
    
    .input-field {
      transition: all 0.2s ease;
    }
    
    .input-field:focus {
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }
    
    .verification-google {
      background: linear-gradient(135deg, #4285f4, #34a853);
      color: white;
    }
    
    .verification-normal {
      background: linear-gradient(135deg, #6b7280, #4b5563);
      color: white;
    }
    
    /* Modal scrollbar styling */
    .modal-content::-webkit-scrollbar {
      width: 8px;
    }
    
    .modal-content::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 4px;
    }
    
    .modal-content::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 4px;
    }
    
    .modal-content::-webkit-scrollbar-thumb:hover {
      background: #555;
    }
    
    .tab-active {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      color: white;
    }
    
    .tab-inactive {
      background: #f3f4f6;
      color: #6b7280;
    }
  </style>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
  <!-- Header -->
  <header class="glass-effect shadow-sm sticky top-0 z-10">
    <div class="container mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center">
        <a href="/adminPage" class="flex items-center hover:opacity-80 transition-opacity">
          <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-600 to-indigo-600 flex items-center justify-center mr-3">
            <i class="fas fa-stethoscope text-white text-xl"></i>
          </div>
          <h1 class="text-xl font-bold text-gray-800">Healthcare Portal Admin</h1>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-2">
          <div class="h-10 w-10 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-white"></i>
          </div>
          <span class="font-medium text-gray-700">Admin</span>
        </div>
        <button onclick="handleLogout()" class="btn-danger px-4 py-2 text-white rounded-lg transition">
          <i class="fas fa-sign-out-alt mr-2"></i>Logout
        </button>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-4 py-6">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Patient Records</h1>
        <p class="text-gray-600 mt-2">View and manage all registered patients</p>
      </div>
      <div class="mt-4 md:mt-0">
        <a href="/adminPage" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
          <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Total Patients</p>
            <h3 class="text-2xl font-bold text-blue-600 mt-1"><%= totalPatientsCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user-injured text-white text-xl"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Google Verified</p>
            <h3 class="text-2xl font-bold text-green-600 mt-1"><%= googleVerifiedCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
            <i class="fab fa-google text-white text-xl"></i>
          </div>
        </div>
      </div>
      
      <div class="glass-effect card rounded-2xl p-6">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Normal Registration</p>
            <h3 class="text-2xl font-bold text-purple-600 mt-1"><%= normalVerifiedCount || 0 %></h3>
          </div>
          <div class="h-12 w-12 bg-gradient-to-r from-purple-500 to-violet-500 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-white text-xl"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabs -->
    <div class="flex space-x-2 mb-6">
      <button id="allTab" class="tab-active px-6 py-2 rounded-lg font-medium transition-colors">
        All Patients (<%= totalPatientsCount || 0 %>)
      </button>
      <button id="googleTab" class="tab-inactive px-6 py-2 rounded-lg font-medium transition-colors">
        Google Verified (<%= googleVerifiedCount || 0 %>)
      </button>
      <button id="normalTab" class="tab-inactive px-6 py-2 rounded-lg font-medium transition-colors">
        Normal Registration (<%= normalVerifiedCount || 0 %>)
      </button>
    </div>

    <!-- Search and Filter -->
    <div class="glass-effect card rounded-2xl mb-6 p-4">
      <div class="flex flex-col md:flex-row justify-between gap-4">
        <div class="relative flex-1 max-w-md">
          <input type="text" id="searchInput" placeholder="Search patients by name, email, username..." class="input-field w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
          <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <div class="flex space-x-2">
          <select id="sortSelect" class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none">
            <option value="newest">Sort by: Newest</option>
            <option value="oldest">Sort by: Oldest</option>
            <option value="name">Sort by: Name</option>
            <option value="age">Sort by: Age</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Patients Table -->
    <div class="glass-effect card rounded-2xl overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50/50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Patient</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact Information</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Personal Details</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Verification</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200/50">
            <% if (patients && patients.length > 0) { %>
              <% patients.forEach(patient => { %>
                <tr class="hover:bg-blue-50/50 transition-colors" data-patient-id="<%= patient._id %>" data-verification="<%= patient.verified %>">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="h-10 w-10 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center mr-3">
                        <i class="fas fa-user-injured text-white"></i>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900"><%= patient.name %></div>
                        <div class="text-sm text-gray-500">Username: <%= patient.username || 'N/A' %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900"><%= patient.email || 'Not provided' %></div>
                    <div class="text-sm text-gray-500"><%= patient.phone || 'Not provided' %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900">
                      <% if (patient.age) { %>
                        <span class="font-medium">Age:</span> <%= patient.age %> years
                      <% } else { %>
                        Age: Not provided
                      <% } %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <% if (patient.gender) { %>
                        <span class="font-medium">Gender:</span> <%= patient.gender %>
                      <% } else { %>
                        Gender: Not specified
                      <% } %>
                    </div>
                    <div class="text-xs text-gray-400 truncate max-w-xs"><%= patient.address || 'No address provided' %></div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= patient.verified === 'google' ? 'verification-google' : 'verification-normal' %>">
                      <i class="fas <%= patient.verified === 'google' ? 'fa-google' : 'fa-user' %> mr-1"></i>
                      <%= patient.verified === 'google' ? 'Google' : 'Normal' %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex space-x-2">
                      <button onclick="viewPatient('<%= patient._id %>')" class="btn-primary px-3 py-1 text-white rounded-lg text-sm transition-colors flex items-center">
                        <i class="fas fa-eye mr-1"></i> View
                      </button>
                      <form action="/adminPage/delete-patient/<%= patient._id %>" method="POST" class="inline">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this patient? This action cannot be undone.')" class="btn-danger px-3 py-1 text-white rounded-lg text-sm transition-colors flex items-center">
                          <i class="fas fa-trash mr-1"></i> Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="5" class="px-6 py-8 text-center">
                  <i class="fas fa-user-injured text-gray-400 text-4xl mb-4"></i>
                  <h3 class="text-lg font-medium text-gray-700">No Patients Found</h3>
                  <p class="text-gray-500 mt-2">There are no patients registered in the system.</p>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <% if (patients && patients.length > 0) { %>
        <div class="px-6 py-4 border-t border-gray-200/50 flex justify-between items-center">
          <p class="text-sm text-gray-600">Showing <%= patients.length %> of <%= totalPatientsCount || 0 %> patients</p>
          <div class="flex space-x-2">
            <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
              <i class="fas fa-chevron-left"></i>
            </button>
            <button class="px-3 py-1 bg-blue-600 text-white rounded-lg">1</button>
            <button class="px-3 py-1 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
              <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Modal for Patient Details -->
  <div id="patientModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50 hidden">
    <div class="glass-effect rounded-2xl shadow-lg w-full max-w-4xl max-h-[90vh] overflow-hidden border border-white/50">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-gradient-to-r from-green-600 to-emerald-600 text-white">
        <h3 class="text-xl font-semibold">Patient Details</h3>
        <button id="closeModal" class="text-white hover:text-gray-200 transition-colors">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
      <div class="p-6 modal-content overflow-y-auto max-h-[calc(90vh-80px)]" id="patientDetails">
        <!-- Patient details will be populated here -->
      </div>
    </div>
  </div>

  <script>
    // Tab functionality
    const allTab = document.getElementById('allTab');
    const googleTab = document.getElementById('googleTab');
    const normalTab = document.getElementById('normalTab');
    const patientRows = document.querySelectorAll('tbody tr[data-patient-id]');

    function filterPatients(verification) {
      patientRows.forEach(row => {
        if (verification === 'all' || row.getAttribute('data-verification') === verification) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    }

    allTab.addEventListener('click', () => {
      allTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      googleTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      normalTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      filterPatients('all');
    });

    googleTab.addEventListener('click', () => {
      allTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      googleTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      normalTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      filterPatients('google');
    });

    normalTab.addEventListener('click', () => {
      allTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      googleTab.className = 'tab-inactive px-6 py-2 rounded-lg font-medium transition-colors';
      normalTab.className = 'tab-active px-6 py-2 rounded-lg font-medium transition-colors';
      filterPatients('normal');
    });

    // Search functionality
    const searchInput = document.getElementById('searchInput');
    searchInput.addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      
      patientRows.forEach(row => {
        const patientName = row.querySelector('.font-medium').textContent.toLowerCase();
        const patientEmail = row.querySelectorAll('.text-sm.text-gray-900')[0]?.textContent.toLowerCase() || '';
        const patientUsername = row.querySelector('.text-sm.text-gray-500').textContent.toLowerCase();
        
        if (patientName.includes(searchTerm) || patientEmail.includes(searchTerm) || patientUsername.includes(searchTerm)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      });
    });

    // Sort functionality
    const sortSelect = document.getElementById('sortSelect');
    sortSelect.addEventListener('change', function(e) {
      // In a real application, this would make an API call to sort the data
      console.log('Sorting by:', e.target.value);
    });

    // Modal functionality
    async function viewPatient(patientId) {
      // Show loading state
      document.getElementById('patientDetails').innerHTML = `
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="h-20 w-20 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center">
              <i class="fas fa-user-injured text-white text-2xl"></i>
            </div>
            <div>
              <h3 class="text-xl font-bold">Loading...</h3>
              <p class="text-gray-600">Fetching patient details</p>
            </div>
          </div>
          <div class="text-center py-8">
            <i class="fas fa-spinner fa-spin text-blue-600 text-2xl mb-2"></i>
            <p class="text-gray-500">Loading patient information</p>
          </div>
        </div>
      `;
      
      document.getElementById('patientModal').classList.remove('hidden');
      
      try {
        const response = await fetch(`/adminPage/patient-details/${patientId}`);
        const data = await response.json();
        
        if (data.success) {
          const patient = data.patient;
          renderPatientDetails(patient);
        } else {
          document.getElementById('patientDetails').innerHTML = `
            <div class="text-center py-8">
              <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
              <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
              <p class="text-gray-500 mt-2">${data.message || 'Could not load patient details'}</p>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error fetching patient details:', error);
        document.getElementById('patientDetails').innerHTML = `
          <div class="text-center py-8">
            <i class="fas fa-exclamation-triangle text-red-500 text-3xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-700">Error Loading Details</h3>
            <p class="text-gray-500 mt-2">Network error. Please try again.</p>
          </div>
        `;
      }
    }

    function renderPatientDetails(patient) {
      document.getElementById('patientDetails').innerHTML = `
        <div class="space-y-6">
          <!-- Patient Header -->
          <div class="flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-y-0 md:space-x-6">
            <div class="h-24 w-24 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center flex-shrink-0">
              <i class="fas fa-user-injured text-white text-3xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-gray-800">${patient.name}</h3>
              <p class="text-gray-600">${patient.email || 'No email provided'}</p>
              <div class="flex flex-wrap gap-2 mt-2">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${patient.verified === 'google' ? 'verification-google' : 'verification-normal'}">
                  <i class="fas ${patient.verified === 'google' ? 'fa-google' : 'fa-user'} mr-1"></i>
                  ${patient.verified === 'google' ? 'Google Verified' : 'Normal Registration'}
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <i class="fas fa-id-card mr-1"></i> Username: ${patient.username || 'N/A'}
                </span>
              </div>
            </div>
          </div>
          
          <!-- Patient Information Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Personal Information</label>
              <p class="text-gray-800"><strong>Name:</strong> ${patient.name}</p>
              <p class="text-gray-800"><strong>Age:</strong> ${patient.age || 'Not specified'}</p>
              <p class="text-gray-800"><strong>Gender:</strong> ${patient.gender || 'Not specified'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Contact Information</label>
              <p class="text-gray-800"><strong>Email:</strong> ${patient.email || 'Not provided'}</p>
              <p class="text-gray-800"><strong>Phone:</strong> ${patient.phone || 'Not provided'}</p>
              <p class="text-gray-800"><strong>Username:</strong> ${patient.username || 'Not provided'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg md:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
              <p class="text-gray-800">${patient.address || 'No address provided'}</p>
            </div>
            
            <div class="bg-gray-50 p-4 rounded-lg">
              <label class="block text-sm font-medium text-gray-700 mb-1">Account Information</label>
              <p class="text-gray-800"><strong>Verification Type:</strong> ${patient.verified === 'google' ? 'Google OAuth' : 'Normal Registration'}</p>
              <p class="text-gray-800"><strong>Patient ID:</strong> ${patient._id}</p>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4 pt-4 border-t">
            <form action="/adminPage/delete-patient/${patient._id}" method="POST" class="inline">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this patient? This action cannot be undone.')" class="btn-danger px-6 py-3 text-white rounded-lg transition-colors duration-200 flex items-center">
                <i class="fas fa-trash mr-2"></i> Delete Patient
              </button>
            </form>
            <button onclick="closeModal()" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors duration-200 flex items-center">
              <i class="fas fa-times mr-2"></i> Close
            </button>
          </div>
        </div>
      `;
    }

    function closeModal() {
      document.getElementById('patientModal').classList.add('hidden');
    }

    const closeModalBtn = document.getElementById('closeModal');
    closeModalBtn.addEventListener('click', closeModal);
    
    // Close modal when clicking outside
    document.getElementById('patientModal').addEventListener('click', (e) => {
      if (e.target === document.getElementById('patientModal')) {
        closeModal();
      }
    });

    // Logout
    async function handleLogout() {
      try {
        const response = await fetch('/admin/logout', {
          method: 'POST'
        });
        const data = await response.json();
        if (data.success) {
          window.location.href = '/';
        }
      } catch (error) {
        window.location.href = '/';
      }
    }
  </script>
</body>
</html>