  <!-- JavaScript for toggling and Google Maps -->
  <script>
    // Tab switching functionality
    const adminBtn = document.getElementById('adminBtn');
    const doctorBtn = document.getElementById('doctorBtn');
    const patientBtn = document.getElementById('patientBtn');

    const adminForm = document.getElementById('adminForm');
    const doctorForm = document.getElementById('doctorForm');
    const patientForm = document.getElementById('patientForm');

    const buttons = [adminBtn, doctorBtn, patientBtn];
    const forms = [adminForm, doctorForm, patientForm];

    function showForm(index) {
      forms.forEach((form, i) => {
        form.classList.toggle('hidden', i !== index);
        buttons[i].classList.toggle('active', i === index);
        buttons[i].classList.toggle('text-blue-600', i === index);
        buttons[i].classList.toggle('font-semibold', i === index);
        buttons[i].classList.toggle('text-gray-600', i !== index);
        buttons[i].classList.toggle('font-medium', i !== index);
      });
      
      // Initialize map when doctor form is shown
      if (index === 1) {
        setTimeout(initMap, 100);
      }
    }

    adminBtn.addEventListener('click', () => showForm(0));
    doctorBtn.addEventListener('click', () => showForm(1));
    patientBtn.addEventListener('click', () => showForm(2));

    // Google Maps variables
    let map;
    let marker;
    let geocoder;
    let searchBox;

    // Initialize Google Maps
    function initMap() {
      if (document.getElementById('locationMap').dataset.initialized) return;
      
      // Default coordinates (center of the map)
      const defaultLocation = { lat: 40.7128, lng: -74.0060 }; // New York City
      
      // Create map
      map = new google.maps.Map(document.getElementById('locationMap'), {
        zoom: 12,
        center: defaultLocation,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        streetViewControl: false,
        fullscreenControl: true,
        mapTypeControl: false
      });

      // Create marker
      marker = new google.maps.Marker({
        position: defaultLocation,
        map: map,
        draggable: true,
        title: "Drag to set your practice location"
      });

      // Initialize geocoder
      geocoder = new google.maps.Geocoder();

      // Create search box
      const input = document.getElementById('locationSearch');
      searchBox = new google.maps.places.SearchBox(input);

      // Bias the SearchBox results towards current map's viewport
      map.addListener('bounds_changed', function() {
        searchBox.setBounds(map.getBounds());
      });

      // Listen for the event when a place is selected
      searchBox.addListener('places_changed', function() {
        const places = searchBox.getPlaces();

        if (places.length === 0) {
          return;
        }

        // Clear existing markers
        marker.setMap(null);

        const bounds = new google.maps.LatLngBounds();
        places.forEach(function(place) {
          if (!place.geometry) {
            console.log("Returned place contains no geometry");
            return;
          }

          // Create a marker for each place
          marker = new google.maps.Marker({
            map: map,
            title: place.name,
            position: place.geometry.location,
            draggable: true
          });

          // Update coordinates
          updateCoordinates(place.geometry.location);

          if (place.geometry.viewport) {
            bounds.union(place.geometry.viewport);
          } else {
            bounds.extend(place.geometry.location);
          }
        });
        map.fitBounds(bounds);
      });

      // Update coordinates when marker is dragged
      marker.addListener('dragend', function() {
        updateCoordinates(marker.getPosition());
      });

      // Update marker position when map is clicked
      map.addListener('click', function(event) {
        marker.setPosition(event.latLng);
        updateCoordinates(event.latLng);
      });

      // Set initial coordinates
      updateCoordinates(defaultLocation);
      
      // Mark as initialized
      document.getElementById('locationMap').dataset.initialized = true;
    }

    // Update coordinate inputs and hidden location field
    function updateCoordinates(latLng) {
      document.getElementById('locationLat').value = latLng.lat().toFixed(6);
      document.getElementById('locationLng').value = latLng.lng().toFixed(6);
      
      // Reverse geocode to get address
      geocoder.geocode({ location: latLng }, function(results, status) {
        if (status === 'OK' && results[0]) {
          document.getElementById('location').value = results[0].formatted_address;
          document.getElementById('locationSearch').value = results[0].formatted_address;
        }
      });
    }

    // Load Google Maps API
    function loadGoogleMapsAPI() {
      const script = document.createElement('script');
      // Replace with your actual Google Maps API key
      script.src = `https://maps.googleapis.com/maps/api/js?key=YOUR_GOOGLE_MAPS_API_KEY&libraries=places&callback=initMap`;
      script.async = true;
      script.defer = true;
      document.head.appendChild(script);
    }

    // Doctor Registration Form Handler
    doctorForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const messageDiv = document.getElementById('doctorRegMessage');
      const submitBtn = this.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      
      // Show loading
      submitBtn.disabled = true;
      submitBtn.textContent = 'Registering...';
      messageDiv.classList.add('hidden');
      
      // Get form data including location coordinates
      const formData = {
        name: document.getElementById('docName').value,
        email: document.getElementById('docEmail').value,
        password: document.getElementById('docPassword').value,
        phone: document.getElementById('docPhone').value,
        location: document.getElementById('location').value,
        locationLat: document.getElementById('locationLat').value,
        locationLng: document.getElementById('locationLng').value,
        specialization: document.getElementById('specialization').value,
        gender: this.querySelector('input[name="gender"]:checked').value
      };
      
      try {
        const response = await fetch('/doctor/register', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        });
        
        const data = await response.json();
        
        if (data.success) {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-green-100 border border-green-400 text-green-700';
          messageDiv.textContent = data.message;
          messageDiv.classList.remove('hidden');
          this.reset();
          
          // Reset map coordinates
          document.getElementById('locationLat').value = '';
          document.getElementById('locationLng').value = '';
          document.getElementById('location').value = '';
          document.getElementById('locationSearch').value = '';
          
          // Redirect to login after 2 seconds
          setTimeout(() => {
            window.location.href = '/doctorLogin';
          }, 2000);
        } else {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
          messageDiv.textContent = data.message || 'Registration failed. Please try again.';
          messageDiv.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      } catch (error) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Error registering. Please try again.';
        messageDiv.classList.remove('hidden');
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });

    // Patient Registration - OTP Flow (unchanged)
    let patientEmailValue = '';

    document.getElementById('sendOtpBtn')?.addEventListener('click', async function() {
      const emailInput = document.getElementById('patientEmail');
      const email = emailInput.value.trim();
      const messageDiv = document.getElementById('patientMessage');
      const btn = this;
      const originalText = btn.innerHTML;

      if (!email) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Please enter your email address';
        messageDiv.classList.remove('hidden');
        return;
      }

      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Please enter a valid email address';
        messageDiv.classList.remove('hidden');
        return;
      }

      patientEmailValue = email;
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
      messageDiv.classList.add('hidden');

      try {
        const response = await fetch('/patientPage/send-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        const data = await response.json();

        if (data.success) {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-green-100 border border-green-400 text-green-700';
          messageDiv.textContent = data.message;
          messageDiv.classList.remove('hidden');
          
          document.getElementById('emailStep').classList.add('hidden');
          document.getElementById('otpStep').classList.remove('hidden');
          document.getElementById('emailDisplay').textContent = patientEmailValue;
        } else {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
          let errorMsg = data.message || 'Failed to send OTP. Please try again.';
          if (data.details) {
            errorMsg += ' (Error: ' + data.details + ')';
          }
          messageDiv.textContent = errorMsg;
          messageDiv.classList.remove('hidden');
          btn.disabled = false;
          btn.innerHTML = originalText;
        }
      } catch (error) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Error sending OTP. Please try again.';
        messageDiv.classList.remove('hidden');
        btn.disabled = false;
        btn.innerHTML = originalText;
      }
    });

    // Other patient registration handlers remain the same...
    document.getElementById('verifyOtpBtn')?.addEventListener('click', async function() {
      const otpInput = document.getElementById('otpInput');
      const otpCode = otpInput.value.trim();
      const messageDiv = document.getElementById('patientMessage');
      const btn = this;
      const originalText = btn.innerHTML;

      if (!otpCode || otpCode.length !== 6) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Please enter a valid 6-digit OTP';
        messageDiv.classList.remove('hidden');
        return;
      }

      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Verifying...';
      messageDiv.classList.add('hidden');

      try {
        const response = await fetch('/patientPage/verify-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            email: patientEmailValue,
            otpCode: otpCode
          })
        });

        const data = await response.json();

        if (data.success) {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-green-100 border border-green-400 text-green-700';
          messageDiv.textContent = data.message;
          messageDiv.classList.remove('hidden');
          
          setTimeout(() => {
            window.location.href = data.redirectUrl || '/patientPage';
          }, 1500);
        } else {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
          messageDiv.textContent = data.message || 'Invalid OTP. Please try again.';
          messageDiv.classList.remove('hidden');
          btn.disabled = false;
          btn.innerHTML = originalText;
          otpInput.value = '';
        }
      } catch (error) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Error verifying OTP. Please try again.';
        messageDiv.classList.remove('hidden');
        btn.disabled = false;
        btn.innerHTML = originalText;
      }
    });

    document.getElementById('resendOtpBtn')?.addEventListener('click', async function() {
      const resendBtn = this;
      const messageDiv = document.getElementById('patientMessage');
      const originalText = resendBtn.innerHTML;
      
      document.getElementById('otpInput').value = '';
      
      resendBtn.disabled = true;
      resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';
      messageDiv.classList.add('hidden');

      try {
        const response = await fetch('/patientPage/send-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: patientEmailValue })
        });

        const data = await response.json();

        if (data.success) {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-green-100 border border-green-400 text-green-700';
          messageDiv.textContent = 'New OTP sent successfully! Please check your email.';
          messageDiv.classList.remove('hidden');
        } else {
          messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
          messageDiv.textContent = data.message || 'Failed to resend OTP. Please try again.';
          messageDiv.classList.remove('hidden');
        }
      } catch (error) {
        messageDiv.className = 'p-4 rounded-lg mb-4 bg-red-100 border border-red-400 text-red-700';
        messageDiv.textContent = 'Error resending OTP. Please try again.';
        messageDiv.classList.remove('hidden');
      } finally {
        resendBtn.disabled = false;
        resendBtn.innerHTML = originalText;
      }
    });

    document.getElementById('backToEmailBtn')?.addEventListener('click', function() {
      document.getElementById('emailStep').classList.remove('hidden');
      document.getElementById('otpStep').classList.add('hidden');
      document.getElementById('otpInput').value = '';
      document.getElementById('patientMessage').classList.add('hidden');
    });

    // Allow only numbers in OTP input
    document.getElementById('otpInput')?.addEventListener('input', function(e) {
      this.value = this.value.replace(/[^0-9]/g, '');
    });

    function GoogleAuth() {
      window.location.href = "http://localhost:4040/patientPage/auth/google";
    }

    // Initialize the application
    window.onload = function() {
      loadGoogleMapsAPI();
    };
  </script>
